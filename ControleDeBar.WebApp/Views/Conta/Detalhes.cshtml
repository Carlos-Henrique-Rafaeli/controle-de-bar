@model DetalhesContaViewModel

@{
    Layout = "_Layout";
    ViewBag.Titulo = "Detalhes Conta";
}

<hr />
<div class="row justify-content-center my-5">
    <div class="col-md-8">
        <div class="card rounded-4 border-0">
            <div class="card-body p-md-5">
                <h3>Detalhes da Conta</h3>

                <div class="row my-3">
                    <div class="mt-2">
                        <label class="control-label"><strong>Titular:</strong> @Model.Titular</label>
                    </div>

                    <div class="mt-2">
                        <label class="control-label"><strong>Mesa:</strong> @Model.Mesa</label>
                    </div>

                    <div class="mt-2">
                        <label class="control-label"><strong>Garçom:</strong> @Model.Garcom</label>
                    </div>
                </div>

                <h4 class="my-3">Pedidos</h4>

                @if (!Model.Pedidos.Any())
                {
                    <p class="fw-semibold mt-3">Não há nenhum pedido relacionado à conta...</p>
                }
                else
                {
                    <table class="table table-sm table-striped mt-3">
                        <thead>
                            <tr>
                                <th>Produto</th>
                                <th>Qtd.</th>
                                <th>Valor</th>
                                <th></th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var pedido in Model.Pedidos)
                            {
                                <tr>
                                    <td>@pedido.Produto</td>
                                    <td>@pedido.Quantidade</td>
                                    <td>@pedido.TotalParcial.ToString("C2")</td>
                                </tr>
                            }
                        </tbody>
                    </table>
                }

                <div class="d-flex justify-content-end mt-3">
                    <label class="control-label"><strong>Total da Conta:</strong> @Model.ValorTotal.ToString("C2")</label>
                </div>

                <div class="form-group d-flex align-items-center justify-content-end gap-3 mt-3">
                    <a href="/contas">Voltar para a listagem</a>
                </div>
            </div>
        </div>
    </div>
</div>